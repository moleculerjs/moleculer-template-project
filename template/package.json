{
  "name": "{{projectName}}",
  "version": "1.0.0",
  "description": "My Moleculer microservices project",
  "scripts": {
    "dev": "moleculer-runner --repl --hot services",
    "start": "moleculer-runner"{{#jest}},
    "ci": "jest --watch",
    "test": "jest --coverage"{{/jest}}{{#lint}},
    "lint": "eslint services"{{/lint}}
  },
  "keywords": [
    "microservices",
    "moleculer"
  ],
  "author": "",
  "devDependencies": {
    {{#lint}}
    "eslint": "^5.10.0",
    {{/lint}}
    {{#jest}}
    "jest": "^23.6.0",
    "jest-cli": "^23.6.0",
    {{/jest}}
    "moleculer-repl": "^0.5.3"
  },
  "dependencies": {
    {{#apiGW}}
    "moleculer-web": "^0.8.0",
    {{/apiGW}}
    {{#if_eq transporter "NATS"}}
    "nats": "^1.0.1",
    {{/if_eq}}
    {{#if_eq transporter "MQTT"}}
    "mqtt": "^2.18.8",
    {{/if_eq}}
    {{#if_eq transporter "AMQP"}}
    "amqplib": "^0.5.3",
    {{/if_eq}}    
    {{#if_eq transporter "STAN"}}
    "node-nats-streaming": "0.0.51",
    {{/if_eq}}    
    {{#if_eq transporter "Kafka"}}
    "kafka-node": "3.0.1",
    {{/if_eq}}    
    {{#redis}}
    "ioredis": "^4.2.0",
    {{/redis}}
    "moleculer": "^0.13.0"
  },
  "engines": {
    "node": ">= 8.x.x"
  }{{#jest}},
  "jest": {
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "rootDir": "./services",
    "roots": [
      "../test"
    ]
  }{{/jest}}
}
